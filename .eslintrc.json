{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-plusplus": [2, {"allowForLoopAfterthoughts": true}],
        "no-use-before-define": "off"
    }
}
